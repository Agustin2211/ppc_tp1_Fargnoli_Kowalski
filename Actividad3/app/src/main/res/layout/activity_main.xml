<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_x="1dp"
        android:layout_y="25dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="76dp" />

    <TextView
        android:id="@+id/primerNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="3dp"
        android:text="Ingrese el Primer Numero:"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="17dp" />

    <TextView
        android:id="@+id/segundoNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="7dp"
        android:layout_y="100dp"
        android:text="Ingrese el Segundo Numero:"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="161dp" />

    <EditText
        android:id="@+id/numero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="120dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="221dp" />

    <Button
        android:id="@+id/button_suma"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_x="37dp"
        android:layout_y="214dp"
        android:text="+"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="306dp" />

    <Button
        android:id="@+id/button_resta"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_x="124dp"
        android:layout_y="214dp"
        android:text="-"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="306dp" />

    <Button
        android:id="@+id/button_multiplicacion"
        android:layout_width="57dp"
        android:layout_height="48dp"
        android:layout_x="324dp"
        android:layout_y="215dp"
        android:text="*"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="306dp" />

    <Button
        android:id="@+id/button_division"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_x="219dp"
        android:layout_y="215dp"
        android:text="/"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="307dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="312dp"
        android:text="Resultado:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="386dp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_x="69dp"
        android:layout_y="313dp" />

</AbsoluteLayout>